{% extends "base.html.twig" %}
{% block title %} {{ titulo }} {% endblock %}

{% block body %}
<h1>{{ titulo }}</h1>
<a href="{{ path('produto_adicionar') }}" class="btn btn-primary btn-sm">+ Adicionar</a>
<form method="get" class="my-3">
    <label>Pesquisar pelo nome:</label>
    <input type="text" name="nome" class="form-control" value="{{ nomeproduto }}">
    <button type="submit" class="btn btn-primary btn-sm mt-2">Pesquisar</button>
</form>
<table class="table">
    <thead>
        <tr>
            <td>#</td>
            <td>Nome do Produto</td>
            <td>Valor</td>
            <td>Categoria</td>
            <td>Ações</td>
        </tr>
    </thead>
    <tbody>
        {% for produto in produtos %}
            <tr>
                <td>{{ produto.id }}</td>
                <td>{{ produto.nomeproduto }}</td>
                <td>{{ produto.valor }}</td>
                <td>{{ produto.categoria.descricaocategoria }}</td>
                <td>
                    <a href="{{ path('produto_editar', {id: produto.id}) }}" class="btn btn-primary btn-sm">Editar</a>
                    <a href="{{ path('produto_excluir', {id: produto.id}) }}" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}